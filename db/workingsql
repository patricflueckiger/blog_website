CREATE TABLE `blog`.`user` ( `uid` INT NOT NULL AUTO_INCREMENT , `name` TEXT NOT NULL , `email` TEXT NOT NULL , `password` TEXT NOT NULL , `role` TEXT NOT NULL , PRIMARY KEY (`uid`)) ENGINE = InnoDB;

CREATE TABLE `blog`.`topic` ( `tid` INT NOT NULL AUTO_INCREMENT , `uid` INT NOT NULL , `name` TEXT NOT NULL , `description` TEXT NOT NULL , PRIMARY KEY (`tid`)) ENGINE = InnoDB;
